{{- if eq .chezmoi.os "darwin" -}}
accordion-padding = 30
after-login-command = []
after-startup-command = []
automatically-unhide-macos-hidden-apps = false
default-root-container-layout = "tiles"
default-root-container-orientation = "auto"
enable-normalization-flatten-containers = true
enable-normalization-opposite-orientation-for-nested-containers = true
exec-on-workspace-change = []
on-focus-changed = []
on-focused-monitor-changed = ["move-mouse monitor-lazy-center"]
start-at-login = true

[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
bottom = 10
left = 10
right = 10
top = 10

[key-mapping]
preset = "qwerty"

[mode.main.binding]
alt-1 = "workspace 1"
alt-2 = "workspace 2"
alt-3 = "workspace 3"
alt-4 = "workspace 4"
alt-5 = "workspace 5"
alt-b = "workspace b"
alt-comma = "layout accordion horizontal vertical"
alt-e = "focus up"
alt-i = "focus right"
alt-m = "focus left"
alt-n = "focus down"
alt-p = "workspace p"
alt-s = "workspace s"
alt-shift-1 = "move-node-to-workspace 1"
alt-shift-2 = "move-node-to-workspace 2"
alt-shift-3 = "move-node-to-workspace 3"
alt-shift-4 = "move-node-to-workspace 4"
alt-shift-5 = "move-node-to-workspace 5"
alt-shift-b = "move-node-to-workspace b"
alt-shift-e = "move up"
alt-shift-equal = "resize smart +50"
alt-shift-i = "move right"
alt-shift-left = "workspace prev"
alt-shift-m = "move left"
alt-shift-minus = "resize smart -50"
alt-shift-n = "move down"
alt-shift-p = "move-node-to-workspace p"
alt-shift-right = "workspace next"
alt-shift-s = "move-node-to-workspace s"
alt-shift-semicolon = "mode service"
alt-shift-t = "move-node-to-workspace t"
alt-shift-tab = "move-workspace-to-monitor --wrap-around next"
alt-shift-z = "move-node-to-workspace z"
alt-slash = "layout tiles horizontal vertical"
alt-t = "workspace t"
alt-tab = "workspace-back-and-forth"
alt-z = "workspace z"

[mode.service.binding]
alt-shift-e = ["join-with up", "mode main"]
alt-shift-i = ["join-with right", "mode main"]
alt-shift-m = ["join-with left", "mode main"]
alt-shift-n = ["join-with down", "mode main"]
backspace = ["close-all-windows-but-current", "mode main"]
down = "volume down"
esc = ["reload-config", "mode main"]
f = ["layout floating tiling", "mode main"]
r = ["flatten-workspace-tree", "mode main"]
shift-down = ["volume set 0", "mode main"]
up = "volume up"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling"]

[on-window-detected.if]
window-title-regex-substring = "Android Emulator - Pixel_8_API_35:5554"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling"]

[on-window-detected.if]
window-title-regex-substring = "CarPlay"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling", "move-node-to-workspace t"]

[on-window-detected.if]
app-id = "com.mitchellh.ghostty"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling", "move-node-to-workspace b"]

[on-window-detected.if]
app-id = "app.zen-browser.zen"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling", "move-node-to-workspace s"]

[on-window-detected.if]
app-id = "com.spotify.client"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling", "move-node-to-workspace p"]

[on-window-detected.if]
app-id = "com.1password.1password"

[[on-window-detected]]
check-further-callbacks = false
run = ["layout tiling", "move-node-to-workspace z"]

[on-window-detected.if]
app-id = "dev.zed.Zed"
{{- end -}}
